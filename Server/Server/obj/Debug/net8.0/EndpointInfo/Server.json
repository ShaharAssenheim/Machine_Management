      "CreateMachineDto": {
        "required": [
          "acsVersion",
          "location",
          "model",
          "name",
          "owner",
          "plcVersion",
          "status",
          "teamviewerName",
          "tubes",
          "tubesNumber"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "model": {
            "$ref": "#/components/schemas/ModelType"
          },
          "status": {
            "$ref": "#/components/schemas/MachineStatus"
          },
          "plcVersion": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "acsVersion": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "tubesNumber": {
            "maximum": 10,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "tubes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TubeDto"
            }
          },
          "owner": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "teamviewerName": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "location": {
            "$ref": "#/components/schemas/LocationDto"
          }
        },
        "additionalProperties": false
      },
      "ForgotPasswordDto": {
        "required": [
          "email"
