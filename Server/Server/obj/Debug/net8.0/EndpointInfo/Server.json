        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      "ForgotPasswordResponseDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LocationDto": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string",
            "nullable": true
          },
          "city": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "MachineDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "model": {
            "$ref": "#/components/schemas/ModelType"
          },
          "status": {
            "$ref": "#/components/schemas/MachineStatus"
          },
          "plcVersion": {
            "type": "string",
            "nullable": true
          },
          "acsVersion": {
            "type": "string",
            "nullable": true
          },
          "tubesNumber": {
            "type": "integer",
            "format": "int32"
          },
          "tubes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TubeDto"
            },
            "nullable": true
          },
          "owner": {
            "type": "string",
            "nullable": true
          },
          "teamviewerName": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "$ref": "#/components/schemas/LocationDto"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MachineStatus": {
        "enum": [
          "Running",
          "Idle",
          "Maintenance",
          "Error"
        ],
        "type": "string"
      },
      "ModelType": {
        "enum": [
          "Onyx3000",
          "Onyx3200"
        ],
        "type": "string"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RegisterDto": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9._%+-]+@rigaku\\.com$",
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)[A-Za-z\\d@$!%*?&]{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "TubeDto": {
        "type": "object",
        "properties": {
          "tubeIndex": {
            "type": "integer",
            "format": "int32"
          },
          "tubeType": {
            "$ref": "#/components/schemas/TubeType"
          },
          "purgingConnected": {
            "type": "boolean"
          },
          "shutterExists": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TubeType": {
        "enum": [
          "Petrick",
          "MXR",
          "ColorsTW",
          "ColorsTCu",
          "ColorsTAu",
          "ColorsTMo",
          "ColorsTWMa"
        ],
        "type": "string"
      },
      "UpdateMachineDto": {
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "model": {
            "$ref": "#/components/schemas/ModelType"
          },
          "status": {
            "$ref": "#/components/schemas/MachineStatus"
          },
          "plcVersion": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "acsVersion": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "tubesNumber": {
            "maximum": 10,
            "minimum": 0,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "tubes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TubeDto"
            },
            "nullable": true
          },
          "owner": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "teamviewerName": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "location": {
            "$ref": "#/components/schemas/LocationDto"
          }
        },
        "additionalProperties": false
      }
    }
